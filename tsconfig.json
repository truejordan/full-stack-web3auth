{
  // Root TypeScript configuration for monorepo
  // Individual packages should extend from this or have their own configs
  "compilerOptions": {
    // Base settings for the monorepo
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "moduleDetection": "force",
    
    // Strict type checking
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,
    
    // Code quality
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    
    // Module resolution
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "verbatimModuleSyntax": true,
    
    // Output options (packages can override)
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    
    // Performance
    "skipLibCheck": true,
    
    // Path mappings for workspace packages
    "paths": {
      "@repo/ui": ["./packages/ui/src"],
      "@repo/ui/*": ["./packages/ui/src/*"]
    }
  },
  "files": [],
  "include": [],
  "references": [
    { "path": "./apps/Backend" },
    { "path": "./apps/Frontend" },
    { "path": "./packages/ui" }
  ]
}